<% form_tag contact_mails_path(:return_to => request.request_uri), { :id => @id, :method => :post } do -%>
	<%= hidden_field_tag 'contact_mail[recipients]', @recipients %>
	<%= hidden_field_tag 'success_message', @success_message %>
	<%= hidden_field_tag 'failure_message', @failure_message %>

	<%= render_fields(@fields) if @fields.present? %>

  <%= submit_tag @submit_text %>
<% end %>